---
export interface Props {
	name: string;
  role: string;
}

const { name, role } = Astro.props as Props;
---

<section class="py-10 md:py-36 dark:bg-gray-900">
  <h3 class="hidden">Banner</h3>
  <div class="max-w-screen-xl mx-auto px-4 text-left">
    <!-- <h4 class="text-gray-900 dark:text-white font-normal text-sm md:text-base">Hey, I'm</h4> -->
    <h5 class="text-gray-900 dark:text-white font-bold text-6xl md:text-7xl"><span class="gradient-text">{name}</span></h5>
    <h6 class="mt-2 text-gray-700 dark:text-gray-200 font-medium text-xl">{role} at Dentsu Creative</h6>
    <!-- <p class="mt-2 text-gray-500 dark:text-gray-400 text-base">I specialize in responsive design, accessibility, and UI/UX.</p> -->
    <p class="mt-2 text-gray-500 dark:text-gray-400 text-base md:max-w-xl	">I specialize in responsive design, ensuring accessibility, and enhancing UI/UX for a seamless user experience.</p>
  </div>
</section>
