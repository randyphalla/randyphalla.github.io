---
export interface Props {
	name?: string;
  role?: string;
  description?: string;
}

const { name, role, description } = Astro.props as Props;
---

<section class="px-4 py-10 md:px-8 md:py-36 dark:bg-gray-900">
  <h3 class="hidden">Banner</h3>
  <div class="max-w-screen-xl mx-auto text-left">
    <h5 class="text-gray-900 dark:text-white font-bold text-4xl md:text-6xl"><span class="">{name}</span></h5>
    <h6 class="mt-3 text-gray-900 dark:text-gray-200 font-medium text-lg md:text-xl">{role}</h6>
    <p class="mt-3 text-gray-900 dark:text-gray-400 font-light text-lg md:text-xl md:max-w-xl text-pretty">{description}</p>
  </div>
</section>
