---
export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="description" content="Randy Phalla a full stack developer based in london ontario">
		<meta name="theme-color" content="#000000">
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Randy Phalla</title>
	</head>
	<body>
		<h1 class="hidden">Randy Phalla's Portfolio</h1>
		<slot />
	</body>
</html>
<style is:global>
	/* @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800,900&display=swap'); */
	@import url('https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap');
	/* @import url('https://fonts.googleapis.com/css2?family=PT+Serif&display=swap'); */
	@import url('https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@100;200;300;400;500;600;700;800;900&display=swap');
	@tailwind base;
	@tailwind components;
	@tailwind utilities;

	@layer base {
		:root {
			--color-primary: #FF2734;
			/* rgb(255, 41, 55); */
		}

		.mobile-menu-button:hover svg {
			@apply stroke-gray-50;
		}
	}

	.title-gradient {
		position: relative;
	}

	.title-gradient::after {
		content: '';
		position: absolute;
		left: 15px;
		bottom: -5px;
		z-index: -1;
		height: 30px;
		/* background-color: var(--color-primary); */
		background-color: rgba(255, 41, 55, 0.1);
	}

	.title-gradient--about::after {
		width: 90px;
	}

	.title-gradient--skills::after {
		width: 78px;
	}

	.title-gradient--work::after {
		width: 249px;
	}

	.title-gradient--education::after {
		width: 147px;
	}

	.title-gradient--projects::after {
		width: 120px;
	}
</style>
