---
import Header from '@components/Header';
import Footer from '@components/Footer';
import { ViewTransitions, fade } from 'astro:transitions';

export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en" transition:animate="none">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="description" content="I'm a Front End Developer based in London, Ontario. I graduated from Fanshawe college with an advanced diploma in Graphic Design and a certificate in Interactive Media Specialist. I specialize in responsive design, accessibility, and UI/UX.">
		<meta http-equiv="x-ua-compatible" content="ie=edge">
		<meta name="theme-color" content="#FF2734">
		<meta name="robots" content="index,follow">
		<meta name="googlebot" content="index,follow">
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
		<link rel="manifest" href="/site.webmanifest">
		<meta name="generator" content={Astro.generator} />
		<title>Randy Phalla | {title}</title>
		<ViewTransitions />
	</head>
	<body>
		<h1 class="hidden">Randy Phalla's Portfolio</h1>
		<Header client:load />
		<main transition:animate={fade({ duration: '0.3s' })}>
			<h2 class="hidden">Main Content</h2>
			<slot />
		</main>
		<Footer />
	</body>
</html>
<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap');
	@tailwind base;
	@tailwind components;
	@tailwind utilities;

	@layer base {
		:root {
			--color-primary: #FF2734;
			--color-rgb-primary: '255, 41, 55';
		}

		.header__menu-button:hover svg {
			@apply stroke-gray-50;
		}

		.mobile-menu-button:hover svg {
			@apply text-white;
		}
	}
	.title-gradient {
		@apply relative;
		z-index: 1;
	}

	.title-gradient::after {
		content: '';
		@apply absolute;
		left: 15px;
		bottom: -5px;
		z-index: -1;
		height: 30px;
		background-color: rgba(255, 41, 55, 0.1);
		@apply dark:bg-white dark:opacity-10;
	}

	.title-gradient--about::after {
		width: 90px;
	}

	.title-gradient--skills::after {
		width: 78px;
	}

	.title-gradient--work::after {
		width: 249px;
	}

	.title-gradient--education::after {
		width: 147px;
	}

	.title-gradient--projects::after {
		width: 120px;
	}
</style>
